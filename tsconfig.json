{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": false,
    "target": "ESNext",
    "useDefineForClassFields": false,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "lib": ["es2016", "dom"],
    "rootDir": ".",
    "paths": {
      "@vue/compat": ["packages/vue-compat/src"],
      "@vue/*": ["packages/*/src"],
      "vue": ["packages/vue/src"]
    }
  },
  "include": [
    "packages/global.d.ts",
    "packages/*/src",
    "packages/runtime-dom/types/jsx.d.ts",
    "packages/*/__tests__",
    "packages/dts-test",
    "packages/vue/jsx-runtime",
    "scripts/*",
    "rollup.*.js"
  ]
}
